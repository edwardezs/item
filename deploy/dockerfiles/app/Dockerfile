FROM golang:1.22.0 AS build
WORKDIR /app
COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -a -o APP_EXECUTABLE ./cmd/main.go

FROM alpine:3.17.3
ARG BUILD_DATE_TIME
ARG BUILD_GIT_HASH
ENV BUILD_DATE_TIME=${BUILD_DATE_TIME}
ENV BUILD_GIT_HASH=${BUILD_GIT_HASH}
COPY --from=build /app/APP_EXECUTABLE .
CMD /APP_EXECUTABLE
